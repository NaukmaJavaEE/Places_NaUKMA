<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.0.4.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<http access-denied-page="/WEB-INF/views/error.jsp">
		<intercept-url pattern="/index*" access="ROLE_ANONYMOUS, ROLE_ADMIN" />
		<intercept-url pattern="/add*" access="ROLE_ADMIN" />
		<intercept-url pattern="/propose*" access="ROLE_ANONYMOUS" />
		<intercept-url pattern="/delete/*" access="ROLE_ADMIN" />
		<intercept-url pattern="/admin*" access="ROLE_ADMIN" />
		<form-login login-page="/WEB-INF/views/login.jsp"  default-target-url="/admin/"
			authentication-failure-url="/login.jsp?error=true" />
		<logout logout-url="/logout" logout-success-url="/index" />
		
		<anonymous username="guest" granted-authority="ROLE_ANONYMOUS" />
		<remember-me />
		
	</http>

	<authentication-manager>
		<authentication-provider>
			<user-service>
				<user name="admin" password="pass" authorities="ROLE_ADMIN, ROLE_USER" />
				<user name="user1" password="1111" authorities="ROLE_USER" />
				<user name="user2" password="2222" disabled="true" authorities="ROLE_USER" />
			</user-service>
		</authentication-provider>
	</authentication-manager>

</beans:beans>